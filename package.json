{
  "name": "core",
  "version": "1.0.0",
  "author": "Dang Duc B. Dzung (David)",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "start:dev": "cp .env.* dist && cross-env NODE_ENV=development DEBUG=app:sys:* nodemon dist/main.js",
    "start:prod": "swc src -d dist --strip-leading-paths && cross-env NODE_ENV=production nodemon dist/main.js --exitcrash",
    "type-check": "tsc -p ./tsconfig.json --noEmit",
    "type-check:watch": "tsc -p ./tsconfig.json --noEmit -w",
    "build": "swc src -d dist --strip-leading-paths",
    "build:watch": "swc src -d dist --watch --strip-leading-paths",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "prepare": "husky || true",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "_moduleAliases": {
    "@/core": "dist/core/",
    "@/app": "dist/app/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dist": {
    "dir": "dist"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.5",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^28.8.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.2.5",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.6.0"
  },
  "dependencies": {
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.4.12",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "debug": "^4.3.4",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "helmet": "^7.1.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "mongodb": "^6.6.2",
    "mongoose": "^8.3.3",
    "mongoose-lean-getters": "^2.1.0",
    "mongoose-lean-virtuals": "^0.9.1",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.2",
    "reflect-metadata": "^0.2.2",
    "source-map-support": "^0.5.21",
    "uid": "^2.0.2",
    "winston": "^3.13.1",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-logstash": "^1.2.1"
  },
  "engines": {
    "node": "=21.7.3",
    "npm": "=10.5.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^@/core/(.*)$": "<rootDir>/core/$1",
      "^@/app/(.*)$": "<rootDir>/app/$1"
    },
    "rootDir": "./src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
