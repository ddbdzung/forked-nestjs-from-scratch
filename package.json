{
  "name": "core",
  "version": "1.0.0",
  "author": "Dang Duc B. Dzung (David)",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "start:dev": "cp .env.* dist && cross-env NODE_ENV=development nodemon dist/index.js",
    "start:prod": "swc src -d dist --strip-leading-paths && cross-env NODE_ENV=production nodemon dist/index.js --exitcrash",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit -w",
    "build": "swc src -d dist --strip-leading-paths",
    "build:watch": "swc src -d dist --watch --strip-leading-paths",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "prepare": "node --experimental-modules .husky/install.mjs"
  },
  "_moduleAliases": {
    "@/core": "dist/core/",
    "@/app": "dist/app/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "license": "ISC",
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.5",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript-eslint": "^7.6.0"
  },
  "dependencies": {
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.4.12",
    "cross-env": "^7.0.3",
    "debug": "^4.3.4",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "express": "^4.19.2",
    "module-alias": "^2.2.3",
    "nodemon": "^3.1.0",
    "source-map-support": "^0.5.21",
    "typescript": "^5.4.4"
  }
}
